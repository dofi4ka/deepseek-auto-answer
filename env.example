# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# DeepSeek API Key
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Разрешенные пользователи (ID через запятую)
# Пример: ALLOWED_USER_IDS=123456789,987654321
ALLOWED_USER_IDS=123456789

# System prompt для DeepSeek (может быть пустым или не указан)
# Если не нужен, можно оставить пустым или не указывать
SYSTEM_PROMPT=Ты полезный ассистент, который помогает пользователю.

# Максимальное количество сообщений в истории для каждого пользователя
MAX_HISTORY_MESSAGES=50

# Время ожидания перед отправкой ответа (в секундах)
# Если в течение этого времени приходит новое сообщение от того же пользователя,
# сообщения мерджатся и таймер сбрасывается
MESSAGE_WAIT_SECONDS=30

